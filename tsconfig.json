{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@navigations/*": ["src/navigations/*"],
      "@screens/*": ["src/screens/*"],
      "@utills/*": ["src/utills/*"],
      "@hooks/*": ["src/hooks/*"],
      "~api/*": ["src/api/*"],
      "~assets/*": ["src/assets/*"],
      "~components/*": ["src/components/*"],
      "~navigations/*": ["src/navigations/*"],
      "~screens/*": ["src/screens/*"],
      "~utills/*": ["src/utills/*"],
      "~hooks/*": ["src/hooks/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
